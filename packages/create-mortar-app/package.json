    "ts-jest": "^29.2.5",
    "typescript": "latest"
  },
  "dependencies": {
    "@repo/common": "*"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "src/**/*",
    "package.json"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
