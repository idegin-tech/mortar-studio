{
  "name": "create-mortar-app",
  "version": "0.0.1",
  "description": "CLI for generating a mortar app project",
  "main": "dist/index.js",
  "bin": {
    "create-mortar-app": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
